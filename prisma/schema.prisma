generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user_basis {
  id              String  @unique @default(uuid())
  phone           String
  name            String @default("")
  avatarURL       String @default("https://www.bing.com/images/search?q=%E5%A4%B4%E5%83%8F&FORM=IQFRBA&id=104C5A5EDCF06680BDFE59E35C147516E0ABD939")
  gender          String?
  age             String?
  vx              String?
  originalAddress Json?
  currentAddress  Json?
  status          String?
  filterInfo      Json?
  customTags      String?
  height          String?
  weight          String?
}

model user_login {
  id String @unique @default(uuid())
  phone String
  password String
  registerTime DateTime @default(now())
  recentLoginTime DateTime?
  accesstoken String?
  refreshToken String?
  code String?
}

model chat_list {
  id String @unique @default(uuid())
  createTime DateTime @default(now())
  updateTime DateTime @updatedAt
  name String
  isRead Boolean? @default(false)
  isDelete Boolean? @default(false)
  content String
}